<!DOCTYPE html>
<html>
<head>
  <title>Moviesapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="banner">
	<%= image_tag("sad-face1.jpg", :size => "100x50") %>
	<%= @page_title || "Movies We Love" %>
</div>

<div id="nav">
<ul>
      <li><%= link_to "About us", about_path%></li>
      <li><%= link_to "Movie News", 'http://oscar.go.com/nominees' %></li>
      <li><%= mail_to "mary.regan@dit.ie", "Contact us" %></li>	
      <li><%= link_to "Movies", movies_path%></li>
	  
	  <% if !signed_in? %>
	<li align = "left"><%= link_to "Sign In", signin_path %></li>
	
<% else %>
	<li align = "left">Signed in as <%= @current_user.name %></li>
	<li align = "left"><%= link_to "Sign Out", signout_path %></li>
	
<%end %>
	<li><%= link_to "Question"%></li>
    </ul>
</div>




<%= yield %>
<p id = "notice" ><%= notice %></p>

</body>
</html>
